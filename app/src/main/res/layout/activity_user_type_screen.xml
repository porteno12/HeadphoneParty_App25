<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back pill -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipBack"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textAllCaps="true"
            app:chipMinHeight="36dp"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            app:iconStartPadding="6dp"
            app:chipIconSize="18dp"
            app:chipIcon="@drawable/ic_arrow_left_24" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select User Type"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please choose your profession"
            android:textSize="14sp"
            android:alpha="0.6"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Grid 2 columns -->
        <GridLayout
            android:id="@+id/gridRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowOrderPreserved="false">

            <!-- Card template (copy & change icon/text) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false"
                app:strokeColor="#F0F3F7"
                app:strokeWidth="1dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_author_24"
                        android:tint="#2866FF"
                        android:contentDescription="@string/empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Organizer"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#F0F3F7"
                app:strokeWidth="1dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_editor_24"
                        android:tint="#12B3C7"
                        android:contentDescription="@string/empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#F0F3F7"
                app:strokeWidth="1dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_moderator_24"
                        android:tint="#13C7A7"
                        android:contentDescription="@string/empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderator"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#F0F3F7"
                app:strokeWidth="1dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_accountant_24"
                        android:tint="#06C3EB"
                        android:contentDescription="@string/empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accountant"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Selected card (blue filled with check) -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#2E5BFF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_designer_24"
                            android:tint="@android:color/white"
                            android:contentDescription="@string/empty" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Designer"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_check_circle_24"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/empty" />
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="#F0F3F7"
                app:strokeWidth="1dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_developer_24"
                        android:tint="#08C1B8"
                        android:contentDescription="@string/empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- Bottom bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuest"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Enter as a guest"
                android:enabled="false"
                android:backgroundTint="#EEF2F7"
                android:textColor="#9AA7B6"
                app:cornerRadius="20dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNext"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="@string/empty"
                app:backgroundTint="#2E5BFF"
                app:srcCompat="@drawable/ic_arrow_right_24" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
